<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#ff0000"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter a location"
        android:inputType="numberDecimal"
        android:textStyle="bold" />

    <Button
        android:id="@+id/go"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FF6200EE"
        android:onClick="getForecast"
        android:text="Go" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_recycler"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/go"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:layout_below="@+id/id_recycler"
        android:id="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="" />


    <ImageView
        android:id="@+id/imageView1"
        android:layout_below="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"/>

    <TextView
        android:layout_below="@+id/imageView1"
        android:id="@+id/textTemp1"
        android:layout_alignParentLeft="true"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="" />

    <TextView
        android:id="@+id/textView2"
        android:layout_below="@+id/id_recycler"
        android:layout_toRightOf="@+id/textView1"
        android:layout_width="120dp"

        android:layout_height="wrap_content"
        android:text="" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_marginHorizontal="40dp"

        android:layout_height="50dp"/>

    <TextView
        android:layout_below="@+id/imageView2"
        android:id="@+id/textTemp2"
        android:layout_width="120dp"
        android:layout_toRightOf="@+id/textTemp1"

        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/textView3"
        android:layout_below="@+id/id_recycler"
        android:layout_toRightOf="@+id/textView2"

        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="" />
    <ImageView
        android:id="@+id/imageView3"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"/>

    <TextView
        android:layout_below="@+id/imageView3"
        android:id="@+id/textTemp3"
        android:layout_width="120dp"
        android:layout_toRightOf="@+id/textTemp2"

        android:layout_height="wrap_content"
        android:text="" />

</RelativeLayout>